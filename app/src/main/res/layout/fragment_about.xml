<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutFragment">

   <TextView
       android:id="@+id/about"
       android:text="ABOUT US"
       android:textSize="20sp"
       android:textColor="@color/orange"
       android:paddingTop="15dp"
       android:paddingLeft="120dp"
       android:textStyle="bold"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/about_text"
        android:layout_below="@id/about"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:text="Blesbok Safaris is a Kenyan Company that provides Safari Tours and Travel.We aim at providing you with the best safari experience in Kenya. Enjoy the great wildlife and marine parks Kenya has to offer. Book with us today!" />

    <TextView
        android:id="@+id/howitworks"
        android:text="HOW IT WORKS"
        android:layout_below="@id/about_text"
        android:paddingTop="10dp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:paddingLeft="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/one"
        android:layout_below="@id/howitworks"
        android:background="@drawable/text_view_circle"
        android:text="1"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/one_text"
        android:layout_below="@id/one"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Book/Schedule your desired trip."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/two"
        android:layout_below="@id/one_text"
        android:background="@drawable/text_view_circle"
        android:text="2"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/two_text"
        android:layout_below="@id/two"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Make your payment via the channels provided on the app."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/three"
        android:layout_below="@id/two_text"
        android:background="@drawable/text_view_circle"
        android:text="3"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/three_text"
        android:layout_below="@id/three"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="You will receive a confirmation email regarding your details and you will be good to go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>